<% layout("/layouts/boilerplate.ejs") %>

<div class="row mt-3">
  <div class="col-8 offset-2">
    <div class="card col-10 offset-1 showcard listing-card">
      <h3><%= listing.title %></h3>
      <img src="<%= listing.image.url %>" class="card-img-top show-img">

      <div class="card-body">
        <p class="card-text">
          <strong>Created by:</strong>
          <% if (listing.owner) { %>
            <i><%= listing.owner.username %></i><br>
          <% } else { %>
            <i>Owner not available</i><br>
          <% } %>

          <strong>Category:</strong>
          <span class="badge bg-info text-dark"><%= listing.category %></span><br>

          <strong>Description:</strong> <%= listing.description %> <br>
          <strong>Price:</strong> ₹<%= listing.price.toLocaleString("en-IN") %> / night<br>
          <strong>Location:</strong> <%= listing.location %>, <%= listing.country %><br>
        </p>
      </div>
    </div>

    <br>

    <% if (currUser && listing.owner && currUser._id.equals(listing.owner._id)) { %>
      <div class="btns col-6 offset-2 mb-3">
        <a href="/listings/<%= listing._id %>/edit" class="btn btn-warning w-45 offset-4">Edit</a>
        <form method="post" action="/listings/<%= listing._id %>?_method=DELETE">
          <button class="btn btn-danger w-45 offset-1">Delete</button>
        </form>
      </div>
    <% } %>
  </div>

  <% if (currUser) { %>
    <hr>
    <div class="mb-3 mt-3">
      <h4>Leave a Review</h4>
      <form action="/listings/<%= listing._id %>/reviews" method="post" novalidate class="needs-validation">
        <fieldset class="starability-slot">
          <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
          <input type="radio" id="first-rate1" name="review[rating]" value="1" /><label for="first-rate1" title="Terrible">1 star</label>
          <input type="radio" id="first-rate2" name="review[rating]" value="2" /><label for="first-rate2" title="Not good">2 stars</label>
          <input type="radio" id="first-rate3" name="review[rating]" value="3" /><label for="first-rate3" title="Average">3 stars</label>
          <input type="radio" id="first-rate4" name="review[rating]" value="4" /><label for="first-rate4" title="Very good">4 stars</label>
          <input type="radio" id="first-rate5" name="review[rating]" value="5" /><label for="first-rate5" title="Amazing">5 stars</label>
        </fieldset>

        <div class="mb-3 mt-3">
          <label for="comment" class="form-label">Comment</label>
          <textarea name="review[comment]" id="comment" cols="30" rows="7" class="form-control" required></textarea>
          <div class="invalid-feedback">Please submit some comments for review</div>
        </div>

        <button class="btn btn-outline-dark">Submit</button>
      </form>
    </div>
  <% } %>

  <hr>
  <p><b>All Reviews</b></p>
  <div class="row">
    <% for (review of listing.reviews) { %>
      <div class="card col-5 ms-3 mb-3">
        <div class="card-body">
          <h5 class="card-title"><%= review.author.username %></h5>
          <p class="card-text"><%= review.comment %></p>
          <p class="starability-result card-text mb-3" data-rating="<%= review.rating %>">
            <%= review.rating %> ⭐
          </p>
        </div>

        <form method="post" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
          <button class="btn btn-sm btn-dark mb-3">Delete</button>
        </form>
      </div>
    <% } %>
  </div>
</div>

<div id="map" style="height:400px; width:100%;"></div>
<br>
<script>
  const listingData = <%- JSON.stringify(listing) %>;
</script>
