<% layout("/layouts/boilerplate.ejs") %>
<%= success %>
<style>
  .tax-switch{
    border: 1px solid rgb(220, 53, 69);
    border-radius: 10px;
    display: flex;
    justify-content: center;
    padding: 0.5rem;
    color:rgb(220, 53, 69);
  }
 .tax-info{
  display: none;
 }
</style>
<body>
  <div class="container mt-4 text-center">
    <h4 class="mb-3">Filter by Category</h4>

    <!-- Category Buttons -->
    <div class="d-flex flex-wrap justify-content-center gap-1">
      <a href="/listings" class="btn <%= !category ? 'btn-danger' : 'btn-outline-danger' %>">All</a>
      <a href="/listings?category=Beach" class="btn <%= category === 'Beach' ? 'btn-danger' : 'btn-outline-danger' %>">Beach</a>
      <a href="/listings?category=Mountain" class="btn <%= category === 'Mountain' ? 'btn-danger' : 'btn-outline-danger' %>">Mountain</a>
      <a href="/listings?category=City" class="btn <%= category === 'City' ? 'btn-danger' : 'btn-outline-danger' %>">City</a>
      <a href="/listings?category=Forest" class="btn <%= category === 'Forest' ? 'btn-danger' : 'btn-outline-danger' %>">Forest</a>
      <a href="/listings?category=Desert" class="btn <%= category === 'Desert' ? 'btn-danger' : 'btn-outline-danger' %>">Desert</a>
      <a href="/listings?category=Countryside" class="btn <%= category === 'Countryside' ? 'btn-danger' : 'btn-outline-danger' %>">Countryside</a>
      <a href="/listings?category=Luxury" class="btn <%= category === 'Luxury' ? 'btn-danger' : 'btn-outline-danger' %>">Luxury</a>
      <a href="/listings?category=Adventure" class="btn <%= category === 'Adventure' ? 'btn-danger' : 'btn-outline-danger' %>">Adventure</a>
      
      <div class="tax-switch">
        <div class="form-check-reverse form-switch">
          <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
          <label class="form-check-label" for="flexSwitchCheckDefault">Display Taxes</label>
        </div>
    </div>
  </div>
    <hr class="mt-4" />

    <h1 class="mt-3">
      <%= category ? category + " Listings" : "All Listings" %>
    </h1>
  </div>

  <!-- Listing Cards Grid -->
  <div class="row row-cols-1 row-cols-md-3 row-cols-lg-4 mt-4">
    <% if (listings.length === 0) { %>
      <div class="text-center text-muted">
        <p>No listings found in this category.</p>
      </div>
    <% } else { %>
      <% listings.forEach(listing => { %>
        <a href="/listings/<%= listing._id %>" class="listing-link text-decoration-none text-dark">
          <div class="card col listing-card shadow-sm mb-4">
            <img src="<%= listing.image.url %>" class="card-img-top" alt="<%= listing.title %>" style="height: 20rem; object-fit: cover;">
            <div class="card-body">
              <p class="card-text">
                <b><%= listing.title %></b><br>
                <span class="text-muted"><%= listing.category %></span><br>
                â‚¹<%= listing.price.toLocaleString("en-IN") %> / night
                <i class="tax-info">&nbsp; &nbsp; +18% GST</i>
              </p>
            </div>
          </div>
        </a>
      <% }) %>
    <% } %>
  </div>
</body>
<script>
  let taxSwitch=document.getElementById("flexSwitchCheckDefault");
  taxSwitch.addEventListener("click",()=>{
    let taxInfo=document.getElementsByClassName("tax-info");
    for(info of taxInfo){
      if(info.style.display!=="inline"){
        info.style.display="inline";
      }
      else{
        info.style.display="none";
      }
    }
  })
</script>