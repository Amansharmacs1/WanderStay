<% layout("/layouts/boilerplate.ejs") %>

<style>
  .hero {
    position: relative;
    height: 100vh;
    background: url("https://images.unsplash.com/photo-1600585154340-be6161a56a0c?auto=format&fit=crop&w=1920&q=80") 
      center/cover no-repeat;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    color: white;
  }

  .hero::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.45); /* transparent dark overlay */
    z-index: 0;
  }

  .hero-content {
    position: relative;
    z-index: 1;
  }

  .hero h1 {
    font-size: 3rem;
    font-weight: 700;
  }

  .hero p {
    font-size: 1.2rem;
    margin-top: 0.5rem;
  }

  .btn-explore {
    background: #ff7b00;
    color: white;
    border: none;
    padding: 0.8rem 2rem;
    font-size: 1.1rem;
    border-radius: 30px;
    margin-top: 1.5rem;
    transition: all 0.3s ease;
  }

  .btn-explore:hover {
    background: #ff9a33;
    transform: scale(1.05);
  }
</style>

<div class="hero">
